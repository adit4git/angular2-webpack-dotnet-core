{
  "name": "angular6_webpack",
  "version": "1.0.0",
  "description": "Angular 6 demo using webpack",
  "main": "main.js",
  "scripts": {
    "build:dev": "rimraf wwwroot/* && webpack --config config/webpack.dev.js --progress --profile && copyfiles mock-authors.json favicon.ico wwwroot",
    "build:prod": "rimraf wwwroot/* && webpack --config config/webpack.prod.js --progress --profile --bail && copyfiles mock-authors.json favicon.ico wwwroot",
    "start": "webpack-dev-server --config config/webpack.dev.js --inline --progress --port 3000",
    "lint": "tslint app/**/*.ts -t verbose",
    "electron": "npm run hrefElectron && electron .",
    "electron-aot": "npm run build:prod && npm run hrefElectron && electron .",
    "hrefElectron": "replace-in-file href=\\\"/\\\" href=\\\"./\\\" wwwroot/index.html",
    "hrefBrowser": "replace-in-file href=\\\"./\\\" href=\\\"/\\\" wwwroot/index.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
